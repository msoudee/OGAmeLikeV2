@model OGameLikeV2.Models.ConfigurationViewModel

@{
    ViewBag.Title = "Home";
}

<h2>Configuration générale</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-6">
                @Html.LabelFor(model => model.SolarSystemConfig.SystemSolarNbr, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-6">
                @Html.EditorFor(model => model.SolarSystemConfig.SystemSolarNbr, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SolarSystemConfig.SystemSolarNbr, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-6">
                @Html.LabelFor(model => model.SolarSystemConfig.PlanetPerSolarSystem, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-6">
                @Html.EditorFor(model => model.SolarSystemConfig.PlanetPerSolarSystem, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SolarSystemConfig.PlanetPerSolarSystem, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-6">
                @Html.LabelFor(model => model.PlanetConfig.ResourcesAvailable, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-6">
                @Html.ListBoxFor(m => m.PlanetConfig.ResourcesAvailable, Model.Resources, new { htmlAttributes = new { @class = "form-control", data_required = "false" } })
                @Html.ValidationMessageFor(model => model.PlanetConfig.ResourcesAvailable, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-6">
                @Html.LabelFor(model => model.PlanetConfig.BuildingsAvailable, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-6">
                @Html.ListBoxFor(m => m.PlanetConfig.BuildingsAvailable, Model.Buildings, new { htmlAttributes = new { @class = "form-control", data_required = "false" } })
                @Html.ValidationMessageFor(model => model.PlanetConfig.BuildingsAvailable, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col">
                <input type="submit" value="Configurer le jeu" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}